{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "theme",
  "type": "registry:theme",
  "title": "Hxery, srcery based theme",
  "description": "Hxery is a theme for shadcn/ui that implements the srcery color scheme.",
  "docs": "Don't forget to download iosevka font and import it in your project.",
  "registryDependencies": [
    "http://localhost:3000/r/colors.json"
  ],
  "files": [
    {
      "path": "src/registry/hxery/theme/iosevka.css",
      "type": "registry:file",
      "target": "~/styles/iosevka.css"
    }
  ],
  "cssVars": {
    "theme": {
      "font-heading": "Iosevka, sans-serif",
      "font-body": "Geist mono, sans-serif",
      "font-sans": "var(--font-geist-sans)",
      "font-mono": "var(--font-geist-mono)",
      "radius-sm": "calc(var(--radius) - 4px)",
      "radius-md": "calc(var(--radius) - 2px)",
      "radius-lg": "var(--radius)",
      "radius-xl": "calc(var(--radius) + 4px)"
    },
    "dark": {
      "radius": "0",
      "background": "var(--srcery-black-hard)",
      "foreground": "var(--srcery-white)",
      "card": "var(--srcery-black)",
      "card-foreground": "var(--srcery-white)",
      "popover": "var(--srcery-black-hard)",
      "popover-foreground": "var(--srcery-white)",
      "primary": "var(--srcery-black)",
      "primary-foreground": "var(--srcery-white)",
      "secondary": "var(--srcery-black-bright)",
      "secondary-foreground": "var(--srcery-white)",
      "muted": "var(--srcery-gray-1)",
      "muted-foreground": "var(--srcery-silver)",
      "accent": "var(--srcery-white-hard)",
      "accent-foreground": "var(--srcery-black-hard)",
      "destructive": "var(--srcery-red)",
      "border": "var(--srcery-white)",
      "input": "var(--srcery-white)",
      "ring": "var(--srcery-white)",
      "chart-1": "var(--srcery-red)",
      "chart-2": "var(--srcery-green)",
      "chart-3": "var(--srcery-yellow)",
      "chart-4": "var(--srcery-blue)",
      "chart-5": "var(--srcery-magenta)",
      "sidebar": "var(--srcery-black-hard)",
      "sidebar-foreground": "var(--srcery-white)",
      "sidebar-primary": "var(--srcery-black)",
      "sidebar-primary-foreground": "var(--srcery-white)",
      "sidebar-accent": "var(--srcery-black-bright)",
      "sidebar-accent-foreground": "var(--srcery-white)",
      "sidebar-border": "var(--srcery-white)",
      "sidebar-ring": "var(--srcery-white)",
      "brand": "var(--srcery-white)"
    },
    "light": {
      "radius": "0",
      "background": "var(--srcery-white)",
      "foreground": "var(--srcery-black)",
      "card": "var(--srcery-white)",
      "card-foreground": "var(--srcery-black)",
      "popover": "var(--srcery-white)",
      "popover-foreground": "var(--srcery-black)",
      "primary": "var(--srcery-black)",
      "primary-foreground": "var(--srcery-white)",
      "secondary": "var(--srcery-white-bright)",
      "secondary-foreground": "var(--srcery-black)",
      "muted": "var(--srcery-white-hard)",
      "muted-foreground": "var(--srcery-black-bright)",
      "accent": "var(--srcery-black-cyan)",
      "accent-foreground": "var(--srcery-black-hard)",
      "destructive": "var(--srcery-red)",
      "border": "var(--srcery-black)",
      "input": "var(--srcery-black)",
      "ring": "var(--srcery-black)",
      "chart-1": "var(--srcery-red)",
      "chart-2": "var(--srcery-green)",
      "chart-3": "var(--srcery-yellow)",
      "chart-4": "var(--srcery-blue)",
      "chart-5": "var(--srcery-magenta)",
      "sidebar": "var(--srcery-white)",
      "sidebar-foreground": "var(--srcery-black)",
      "sidebar-primary": "var(--srcery-black)",
      "sidebar-primary-foreground": "var(--srcery-white)",
      "sidebar-accent": "var(--srcery-black-bright)",
      "sidebar-accent-foreground": "var(--srcery-black)",
      "sidebar-border": "var(--srcery-black)",
      "sidebar-ring": "var(--srcery-black)",
      "brand": "var(--srcery-black)"
    }
  }
}
