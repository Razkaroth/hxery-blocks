{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "hxery",
  "homepage": "https://ui.hxery.dev",
  "items": [
    {
      "$schema": "https://ui.shadcn.com/schema/registry-item.json",
      "name": "hxery-colors",
      "type": "registry:style",
      "title": "Srcery colors",
      "description": "Srcery colors for shadcn/ui.",
      "cssVars": {
        "theme": {
          "--color-srcery-black": "rgb(28, 27, 25)",
          "--color-srcery-black-bright": "rgb(145, 129, 117)",
          "--color-srcery-black-hard": "rgb(18, 18, 18)"
        }
      }
    },
    {
      "$schema": "https://ui.shadcn.com/schema/registry-item.json",
      "name": "hxery-theme",
      "type": "registry:theme",
      "title": "Hxery, srcery based theme",
      "description": "Hxery is a theme for shadcn/ui that implements the srcery color scheme.",
      "docs": "Don't forget to download iosevka font and import it in your project.",
      "files": [
        {
          "path": "src/registry/hxery/theme/iosevka.css",
          "type": "registry:file",
          "target": "~/styles/iosevka.css"
        }
      ],
      "cssVars": {
        "theme": {
          "font-heading": "Iosevka, sans-serif"
        }
      }
    }
  ]
}